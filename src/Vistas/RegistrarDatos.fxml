<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Vistas.RegistrarDatosController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="444.0" prefWidth="602.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="602.0" style="-fx-background-color: #0000FF;">
               <children>
                  <Label text="REGISTRA TUS NUEVO DATOS" textFill="WHITE">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox layoutX="-2.0" layoutY="100.0" prefHeight="299.0" prefWidth="600.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="299.0" prefWidth="292.0" spacing="20.0">
                     <children>
                        <Label text="Nombre">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtId" onKeyTyped="#keyEvent">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </VBox.margin>
                        </TextField>
                        <Label text="Apellido">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNom" onKeyTyped="#keyEvent" prefHeight="31.0" prefWidth="269.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="299.0" prefWidth="304.0" spacing="20.0">
                     <children>
                        <Label text="Departamento">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtDepartamento" onKeyTyped="#keyEvent" prefHeight="31.0" prefWidth="269.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <Label text="Telefono">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtTelefono" onKeyTyped="#keyEvent" prefHeight="31.0" prefWidth="269.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                        <Label text="Direccion">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtDireccion" onKeyTyped="#keyEvent" prefHeight="31.0" prefWidth="0.0">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="btnRegistrar" layoutX="492.0" layoutY="405.0" mnemonicParsing="false" onAction="#actionEvent" prefHeight="25.0" prefWidth="85.0" style="-fx-background-radius: 90; -fx-border-radius: 90;" text="Registrar">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnBack" layoutX="393.0" layoutY="405.0" mnemonicParsing="false" onAction="#actionEvent" prefHeight="25.0" prefWidth="85.0" style="-fx-background-radius: 90; -fx-border-radius: 90;" text="Regresar">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
   </children>
</HBox>
